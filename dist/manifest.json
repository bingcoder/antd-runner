{
  "name": "Ant Design Runner",
  "description": "Ant Design 本地编辑预览，无需跳转CodeSandbox、CodePen",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://ant.design/*",
        "https://ant-design.antgroup.com/*",
        "https://ant-design.gitee.io/*"
      ],
      "js": ["content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["js/*"],
      "matches": [
        "https://ant.design/*",
        "https://ant-design.antgroup.com/*",
        "https://ant-design.gitee.io/*"
      ]
    }
  ],
  "permissions": ["storage"],
  "options_ui": {
    "browser_style": true,
    "open_in_tab": true,
    "page": "option.html"
  }
}
